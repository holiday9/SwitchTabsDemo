<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="cursor_label_panel">
        <item name="android:padding">10.0dip</item>
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="cursor_label_name">
        <item name="android:id">@id/label</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="cursor_label_icon">
        <item name="android:id">@id/cursor</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">5dip</item>
        <item name="android:src">@drawable/ic_cursor_label_default</item>
    </style>

</resources>
